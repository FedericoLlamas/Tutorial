<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/news_activity_fragment_id"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="ar.edu.unc.famaf.redditreader.ui.NewsActivityFragment"
tools:showIn="@layout/activity_news">

<ListView
    android:id="@+id/list_view_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</ListView>

<TextView
    android:id="@+id/loginStatusTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:text="@string/no_user_logged_yet"
    android:visibility="gone"/>
</RelativeLayout>


